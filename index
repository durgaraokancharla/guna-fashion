    <script>
        // Mobile menu toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Active nav item indicator
        const navItems = document.querySelectorAll('.nav-item');
        // Select all sections within main and also the new men-collection-details section
        const sections = document.querySelectorAll('main section'); 

        window.addEventListener('scroll', () => {
            let current = '';
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                // Adjusting the offset for header height and a small buffer
                const headerHeight = document.querySelector('header').offsetHeight || 0;
                if (pageYOffset >= sectionTop - headerHeight - 20) {
                    current = section.getAttribute('id');
                }
            });

            navItems.forEach(item => {
                item.classList.remove('active');
                // Check if the item's href matches the current section's ID
                // or if it points to a category section when a category is in view
                // Also handle the new men-collection-details section
                if (item.getAttribute('href') === `#${current}`) {
                    item.classList.add('active');
                } else if (current === 'categories' && (item.getAttribute('href') === '#categories')) {
                    // Special handling for category links if they all point to the same section
                    item.classList.add('active');
                }
            });
        });

        // Initialize active state on page load for the first relevant section
        window.addEventListener('DOMContentLoaded', () => {
            // Simulate a scroll event on load to set the initial active state
            window.dispatchEvent(new Event('scroll'));
        });
    </script>

